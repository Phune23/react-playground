{
  "name": "react-playground",
  "private": true,
  "version": "1.0.5",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "predev": "node scripts/disable-rollup-native.js",
    "prebuild": "node scripts/disable-rollup-native.js",
    "dev": "vite",
    "build": "vite build",
    "build:ci": "vite build",
    "preview": "cross-env ROLLUP_SKIP_LOAD_NATIVE_PLUGINS=true vite preview",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "test": "ROLLUP_SKIP_LOAD_NATIVE_PLUGINS=true node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "ROLLUP_SKIP_LOAD_NATIVE_PLUGINS=true node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "ROLLUP_SKIP_LOAD_NATIVE_PLUGINS=true node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "cleanup": "rm -rf node_modules package-lock.json && npm install",
    "check-lock": "node scripts/check-lock.js",
    "sync-lock": "npm install --package-lock-only && git add package-lock.json"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-live": "^4.1.8",
    "styled-components": "^6.1.17"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "@eslint/js": "^9.21.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "husky": "^4.3.8",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.3",
    "rollup": "^3.29.4",
    "tailwindcss": "^3.4.17",
    "vite": "^6.2.0"
  }
}
